---
import Footer from '../components/ui/Footer.astro';
import Header from '../components/ui/Header.astro';
import Layout from './Layout.astro';

interface Props {
  appName: string;
  title: string;
}

const { appName, title } = Astro.props;
---

<Layout title={title}>
  <Header appName={appName} />

  <slot />

  <Footer appName={appName} />
</Layout>

<style lang="scss" is:global>
  .home-content header {
    position: relative;

    display: grid;
    place-content: center;

    background-color: #ffffffb3;

    height: calc(100vh - 56px);

    &::before {
      content: '';

      position: absolute;
      top: 0;
      right: 0;
      bottom: 0;
      left: 0;
      z-index: -10;

      background-image: url('/src/assets/home-header-background.webp');
      background-repeat: no-repeat;
      background-position: center;
      background-size: cover;

      opacity: 0.15;
    }

    & > section {
      display: grid;
      grid-template-areas:
        'title image'
        'subtitle image';
      place-content: center;
      row-gap: 1rem;
      column-gap: 3rem;

      width: 100%;
      max-width: 1440px;
      padding: 0 5rem;
      margin: 0 auto;

      h1 {
        grid-area: title;

        font-size: 3rem;
        line-height: normal;

        height: fit-content;
        margin-top: auto;

        background-image: var(--second-accent-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 400%;
        background-position: 0%;
      }

      p {
        grid-area: subtitle;

        height: fit-content;
        margin-bottom: auto;

        font-size: 1.15rem;
        line-height: normal;
      }

      &::after {
        grid-area: image;

        content: '';

        background-image: url('/src/assets/home-header-logo.webp');
        background-size: cover;

        --size: 300px;
        width: var(--size);
        height: var(--size);
        margin-right: auto;

        border-radius: 135px 179px 198px 169px;
        box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.35);
      }
    }
  }

  @media (prefers-color-scheme: dark) {
    .home-content header {
      background-color: #000000b3;

      &::before {
        opacity: 0.1;
      }

      & > section::after {
        box-shadow: 0px 0px 10px 0px rgba(255, 255, 255, 0.5);
      }
    }
  }

  :root.light-theme .home-content header {
    background-color: #ffffffb3;

    &::before {
      opacity: 0.15;
    }

    & > section::after {
      box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.35);
    }
  }

  :root.dark-theme .home-content header {
    background-color: #000000b3;

    &::before {
      opacity: 0.1;
    }

    & > section::after {
      box-shadow: 0px 0px 10px 0px rgba(255, 255, 255, 0.5);
    }
  }
</style>
