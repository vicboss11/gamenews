---
import Header from '../components/ui/Header.astro';
import Footer from '../components/ui/Footer.astro';
import Layout from './Layout.astro';

interface Props {
  appName: string;
  title: string;
}

const { appName, title } = Astro.props;
---

<Layout title={title}>
  <Header appName={appName} />

  <main>
    <slot />
  </main>

  <Footer appName={appName} />
</Layout>
