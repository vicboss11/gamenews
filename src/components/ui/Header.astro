---
import Navbar from './Navbar.astro';

interface Props {
  appName: string;
}

const { appName } = Astro.props;
---

<header class="header">
  <section class="header-container">
    <section class="header-company">
      <span>{appName}</span>
    </section>

    <Navbar />

    <section class="header-actions">
      <input class="light-dark-checkbox" type="checkbox" checked />

      <button class="light-dark-btn" type="button" role="button">
        <i class="ti ti-sun"></i>
        <i class="ti ti-moon"></i>
      </button>
    </section>
  </section>
</header>

<script>
  import addThemeToggle from '../../scripts/theme-toggle';

  addThemeToggle();
</script>

<style lang="scss" is:global>
  .header {
    position: sticky;
    top: -2.5rem;
    z-index: 200;

    background-color: var(--second-bg-color);
  }

  .header-container {
    display: grid;
    grid-template-areas:
      'company company company'
      '. navbar actions';
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;

    width: 100%;
    max-width: 1440px;
    margin: 0 auto;
    padding: 1rem var(--lateral-spacing);
  }

  .header-company {
    grid-area: company;
    display: grid;
    place-content: center;

    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;

    font-size: 2rem;
    font-weight: bold;
  }

  .header-actions {
    grid-area: actions;

    position: relative;

    display: grid;
    place-content: center;
    margin-left: auto;
  }

  .navbar {
    grid-area: navbar;

    margin: 0 auto;
  }

  .light-dark-checkbox {
    position: absolute;
    z-index: -10;

    display: none;
  }

  .light-dark-btn {
    display: grid;
    place-content: center;

    border: none;
    background-color: transparent;
    border-radius: 50%;
    width: 1.5rem;
    height: 1.5rem;
    font-size: 1.5rem;

    transition: opacity 150ms;

    cursor: pointer;

    &:hover {
      opacity: 0.5;
    }

    .ti-sun {
      display: block;
    }

    .ti-moon {
      display: none;

      font-size: 1.25rem;
    }
  }

  @media (prefers-color-scheme: dark) {
    .light-dark-btn {
      .ti-sun {
        display: none;
      }

      .ti-moon {
        display: block;
      }
    }
  }

  :root {
    &.light-theme .light-dark-btn {
      .ti-sun {
        display: block;
      }

      .ti-moon {
        display: none;
      }
    }

    &.dark-theme .light-dark-btn {
      .ti-sun {
        display: none;
      }

      .ti-moon {
        display: block;
      }
    }
  }

  @media (min-width: 604px) {
    .header {
      top: 0;
    }

    .header-container {
      display: flex;
      align-items: center;
    }

    .navbar {
      margin: 0;
      margin-left: auto;
    }

    .header-actions {
      margin-left: 2rem;
    }
  }
</style>
