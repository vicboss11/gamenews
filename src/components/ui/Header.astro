---
import Navbar from './Navbar.astro';

interface Props {
  appName: string;
}

const { appName } = Astro.props;
---

<header class="header">
  <section class="header-container">
    <section class="header-company">
      <span>{appName}</span>
    </section>

    <Navbar />

    <section class="header-actions">
      <input class="light-dark-checkbox" type="checkbox" checked />

      <button class="light-dark-btn" type="button" role="button">
        <i class="ti ti-sun"></i>
        <i class="ti ti-moon"></i>
      </button>
    </section>
  </section>
</header>

<script>
  import addThemeToggle from '../../scripts/theme-toggle';

  addThemeToggle();
</script>

<style is:global>
  .header {
    position: sticky;
    top: -4em;
    z-index: 200;

    background-color: var(--second-bg-color);
  }

  .header-container {
    display: grid;
    grid-template-areas:
      'company company company'
      'navbar navbar actions';
    gap: 1em;

    width: 100%;
    max-width: 1240px;
    margin: 0 auto;
    padding: 0.5em 1em;
    padding-top: 2em;
  }

  .header-company {
    grid-area: company;
    display: grid;
    place-content: center;

    font-size: 2em;
    font-weight: bold;
    color: #3e64ff;
  }

  .header-actions {
    position: relative;
    grid-area: actions;

    display: grid;
    place-content: center;
    margin-left: auto;
  }

  .navbar {
    grid-area: navbar;
  }

  .light-dark-checkbox {
    position: absolute;
    z-index: -10;

    display: none;
  }

  .light-dark-btn {
    display: grid;
    place-content: center;

    border: none;
    background-color: transparent;
    border-radius: 50%;
    width: 1.5em;
    height: 1.5em;
    font-size: 1.5em;
    transition: opacity 150ms;

    cursor: pointer;
  }

  .light-dark-btn:hover {
    opacity: 0.5;
  }

  .light-dark-btn .ti-sun {
    display: block;
  }

  .light-dark-btn .ti-moon {
    display: none;
  }

  @media (prefers-color-scheme: dark) {
    .light-dark-btn .ti-sun {
      display: none;
    }

    .light-dark-btn .ti-moon {
      display: block;
    }
  }

  :root.light-theme .light-dark-btn .ti-sun {
    display: block;
  }

  :root.light-theme .light-dark-btn .ti-moon {
    display: none;
  }

  :root.dark-theme .light-dark-btn .fa-sun {
    display: none;
  }

  :root.dark-theme .light-dark-btn .fa-moon {
    display: block;
  }

  @media (min-width: 440px) {
    .header {
      top: 0;
    }

    .header-container {
      display: flex;
      align-items: center;

      padding-top: 0.5em;
    }

    .header-actions {
      position: static;
    }

    .header-actions {
      margin-left: 1.25em;
      margin-right: 1em;
    }
  }
</style>
